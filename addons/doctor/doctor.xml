<?xml version="1.0" encoding="utf-8"?>

<odoo>
<!--    START ADD CSS FILES-->
          <template id="assets_backend" name="document assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link type="text/css" src="/doctor/view/css/style.css" />
            </xpath>
        </template>

<!--    END ADD CSS FILES-->

<!--   START TREE VIEW-->
      <record id="patient_tree" model="ir.ui.view">
        <field name="name">test.doctor.tree</field>
        <field name="model">test.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctor">
                    <field name="sequence"/>
                    <field class="im_id" name="doctor_image" widget='image' />
                    <field name="doctor_name"/>
                    <field name="doctor_age"/>
                    <field name="doctor_department"/>
                    <field name="doctor_gender"/>
            </tree>
        </field>
    </record>
<!--   END TREE VIEW-->

<!-- START FORM VIEW -->
    <record id="patient_form" model="ir.ui.view">
        <field name="name">test.doctor.form</field>
        <field name="model">test.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="sequence" readonly="1"/>
                    </h1>

                </div>

                <group>
                    <group>
                    <field name="doctor_image" widget="image" />
                    <field name="doctor_name"/>
                    </group>
                    <group>
                        <field name="doctor_age"/>
                    </group>
                        <group>
                            <field name="doctor_department"/>
                        </group>
                            <group>
                                    <field name="doctor_gender"/>
                            </group>
                    <group>

                    </group>
                </group>
            </sheet>

            <!-- START ADD CHATTER -->
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers" />
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
            </div>
            <!-- END ADD CHATTER -->

            




            </form>
        </field>
    </record>
<!-- END FORM VIEW -->

<!--   START ADD DATA MODULE-->
    <record id="action_patient_doctor" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">test.doctor</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your First Doctor !
            </p>
        </field>
    </record>
<!--   END ADD DATA MODULE-->



    <!-- START CREATING MENUS -->

    <menuitem id="doctor_root" name="Hospital" sequence="1"/>
    <menuitem id="doctor_patient" name="Doctor" parent="doctor_root" action="action_patient_doctor"/>
    <!-- END CREATING MENUS -->

</odoo>