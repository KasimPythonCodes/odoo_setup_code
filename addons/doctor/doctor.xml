            <record id="action_aptient_appointment" model="ir.actions.act_window">
            <field name="name">Patient Appointment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">patient.appointment</field>
            <field name="domain">[('patient_id', '=', active_id)]</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="doctor.patient_tree_appoint"/>
            <field name="binding_model_id" ref="model_patient_appointment"/>
        </record>




    <!--   START TREE VIEW DOCTOR-->
    <record id="patient_tree" model="ir.ui.view">
        <field name="name">test.doctor.tree</field>
        <field name="model">test.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctor">
                <field name="sequence"/>
                <field class="im_id" name="doctor_image" widget='image'/>
                <field name="doctor_name"/>
                <field name="doctor_age"/>
                <field name="doctor_department"/>
                <field name="doctor_gender"/>
            </tree>
        </field>
    </record>
    <!--   END TREE VIEW DOCTOR-->

     <!--   START TREE VIEW PATIENT-->
    <record id="patient_tree_appoint" model="ir.ui.view">
        <field name="name">patient.appointment.tree</field>
