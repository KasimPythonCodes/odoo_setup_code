    <!-- START FORM VIEW DOCTOR -->
    <record id="patient_form" model="ir.ui.view">
        <field name="name">test.doctor.form</field>
        <field name="model">test.doctor</field>
        <field name="arch" type="xml">
            <header>
                <button name="%(doctor.create_appointment_wizard)d" string="Create Appointment"  type="action"  class="oe_highlight"
                context="{'default_patient_id':active_id}"/>

            </header>
            <form string="Doctor">
                <sheet>

                    <div class="oe_title">
                        <h1>
                            <field name="sequence" readonly="1"/>
                        </h1>

                    </div>

                    <group>
                        <group>
                            <field name="doctor_image" widget="image"/>
                            <field name="doctor_name"/>
                        </group>
                        <group>
                            <field name="doctor_age"/>
                        </group>
                        <group>
                            <field name="doctor_department"/>
                        </group>
                        <group>
                            <field name="doctor_gender"  />
                        </group>
                        <group>

                        </group>
                    </group>

<!--    Appoint Doctor-->
                    <notebook>
                        <page string="Appointment">
                            <field name="appointment_doctor_id" >
                            <tree editable="bottom">
<!--                        <field name="product_id"/>-->
                            <field name="patient_appointmentid_id"/>
                            <field name="appointment_id" invisible="1" options="{'no_create_edit':True}"/>
                            </tree>
                            </field>
                        </page>
                    </notebook>

<!--    Appoint Doctor-->

                </sheet>

                <!-- START ADD CHATTER Doctor-->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                </div>
                <!-- END ADD CHATTER Doctor-->
            </form>
        </field>
    </record>

<!--    END FORM DOCTOR-->

